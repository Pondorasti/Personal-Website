  "devDependencies": {
    "@types/d3": "^7.1.0",
    "@types/react": "^17.0.38",
    "@types/tailwindcss": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "autoprefixer": "^10.4.2",
    "eslint": "8.6.0",
    "eslint-config-next": "12.0.9",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "inspx": "^0.0.1-alpha.6",
    "postcss": "^8.4.5",
    "prettier": "^2.4.1",
    "tailwindcss": "^3.0.8",
    "typescript": "^4.5.4"
  }
